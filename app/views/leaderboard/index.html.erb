<h1>Leading Board</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>User</th>
      <th>Reports</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td>#<%= index + 1 %></td>
        <td>@<%= user.account_name %></td>
        <td><%= user.reports.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', reports_path %>
