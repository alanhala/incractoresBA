<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1>Listing Reports</h1>

<%= render partial: "map", locals: { hash: @hash } %>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Post</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= image_tag report.images.first.attachment.medium %></td>
        <td><%= report.post %></td>
        <td>@<%= report.user.account_name %></td>
        <td><%= link_to 'Show', report %></td>
      </tr>
    <% end %>
  </tbody>
</table>
