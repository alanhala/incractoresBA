<h1>Listing Reports</h1>

<%= render partial: "map", locals: { hash: @hash } %>
<%= link_to "Leader Board", leaderboard_index_url %>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Post</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= image_tag report.images.first.attachment.medium %></td>
        <td><%= report.post %></td>
        <td>@<%= report.user.account_name %></td>
        <td><%= link_to 'Show', report %></td>
      </tr>
    <% end %>
  </tbody>
</table>
